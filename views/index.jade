div.main.scroll-y
	
	section#work.carousel.popped-in.top-radial
		h1 Work
		span.next.btn-nav
			i.icon-arrow-right
		span.prev.btn-nav
			i.icon-arrow-left
		ol.grab.animate.flex(style="opacity:0")
			for post in sort(site.work, { by: 'date' })
				li.no-select
					figure
						img.feed-image.circle(src="#{post.heroimage}")
					div.feed-meta
						a(href="#{post.url}")
							h1.feed-title #{post.title}
						if post.category != null
							h5.feed-tags(data-icon="T") #{post.category}
							span.feed-date #{post.date}
					a.btn-simple.feed-launch(href="#{post.url}", target="_blank") Read

	section#labs.carousel.popped-in
		h1 Labs
		span.next.btn-nav
			i.icon-arrow-right
		span.prev.btn-nav
			i.icon-arrow-left
		ol.grab.animate.flex(style="opacity:0")
			for post in sort(site.labs, { by: 'date' })
				li.no-select
