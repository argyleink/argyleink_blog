@import '_settings'

normalize()
base()
buttons()

@import 'icon-font'
@import 'oo'
@import 'retina'
@import 'carousel'
@import 'footer'

body
	padding: 0
	background: #444 url(../img/debut_dark.png) repeat

a
	color: blue
	text-decoration: none
	cursor: pointer
a:hover
	color: light-blue

hr
	border-top-color: hsl(190, 15%, 20%)
	border-bottom-color: hsl(190, 5%, 35%)
	border-left-color: transparent
	border-right-color: transparent
	margin: 30px 0

nav
	padding:0.5em 1em

nav > h1
	margin: 3px

.btn-simple
	color:white
	margin:3px

.feed > article
	padding:30px 0
	border-bottom:1px solid dark-grey

.feed-title
	margin-top:10px
	margin-bottom:15px
	font-size: 3rem
	font-weight: lighter
	text-transform: capitalize

.feed-date
	font-size:0.4em
	margin-left: 10px
	color: hsl(190, 15%, 40%)

.feed-tags
	color: hsl(190, 0%, 50%)